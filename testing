    #L2.pack()
    custpass=StringVar(None)
    E2=Entry(window1,textvariable=custpass,bd=5).grid(row=1,column=1)
    #E2.pack()
    s=Button(window1,text="Submit",command=login).grid(row=2,column=1)
top=Tk()
top.geometry('450x450')
top.title('Client Page')
#root=Tk(top)
c=Canvas(top,height=250,width=250,bg="green")
frame=Frame(c)
#frame1=Frame(c)
#frame1.pack(side=LEFT)
#frame2=Frame(c)
#frame2.pack(side=RIGHT)
login=Button(frame,text="Login",bg="blue",fg="black",command=logincall)
new=Button(frame,text="New User",bg="blue", fg="black",command=newuser)
new.pack(side=RIGHT)
login.pack(side=LEFT)
frame.pack(side=BOTTOM)
filename = PhotoImage(file = "test.gif")
image = c.create_image(580,520,anchor=CENTER, image=filename)
