def newuser():
    window2=Toplevel(top)
    Name=Label(window2,text="Name").grid(row=0,column=0)
    custname=StringVar(None)
    cust.set("Enter Your name")
    en1=Entry(window2,textvariable=custname,bd=5).grid(row=0,column=1)
    reg=Label(window2,text="Reg No").grid(row=1,column=0)
    custreg1=IntVar(None)
    custreg1.set("Enter your password")
    en2=Entry(window2,textvariable=custreg1,bd=5).grid(row=1,column=1)
    gen=Label(window2,text="Gender").grid(row=3,column=0)
    var=StringVar(None)
    var.set(None)
    m1=Radiobutton(window2,text="Male",variable=var,value="Male").grid(row=3,column=1)
    m2=Radiobutton(window2,text="Female",variable=var,value="Female").grid(row=4,column=1)
    mobile=StringVar(None)
    mobile.set("e.g:+919876030345")
    mob=Label(window2,text="Mobile Number").grid(row=5,column=0)
    en3=Entry(window2,textvariable=mobile,bd=5).grid(row=5,column=1)
    email=Label(window2,text="Email Id").grid(row=6,column=0)
    email1=StringVar(None)
    email1.set("e.g:gourab19964u@gmail.com")
    e4=Entry(window2,textvariable=email1,bd=5).grid(row=6,column=1)
    submit=Button(window2,text="Submit",command=newuser1).grid(row=7,column=1)
